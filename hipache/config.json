{
    "server": {
        "debug": true,
        "accessLog": "/var/log/hipache/hipache.log",
        "workers": 2,
        "maxSockets": 100,
        "tcpTimeout": 10,
        "deadBackendTTL": 100,
        "deadBackendOn500": true,
        "retryOnError": 3,
        "httpKeepAlive": false,
        "lruCache": {
          "size": 5,
          "ttl": 5
        },
        "http": {
          "port": 80,
          "bind: [ "0.0.0.0" ]
        },
        "https": {
          "port": 443,
          "key": "/certs/server.key",
          "cert": "/certs/devstuff_me_bundle.crt",
          "secureProtocol": "SSLv23_method"
      },
      "driver": "redis://redis"
    }
}